@(Html.Kendo().TabStrip()
                        .Name("UserInfo")
                        .HtmlAttributes(new { id= "tabstrip" })
                         .TabPosition(TabStripTabPosition.Left)
                        .Scrollable(true)
                        .Items(tabstrip =>
                        {
                            tabstrip.Add().Text("Contact Info")
                            .Selected(true)
                            .LoadContentFrom("Contact", "Profile");
                            tabstrip.Add().Text("Dependent Info")
                            .LoadContentFrom("Dependents", "Profile");
                        })
)

